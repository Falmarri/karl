<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="layout.macros['master']">

<head>
  <metal:slot metal:fill-slot="extra-headers">
    <script src="${api.static_url}/jquery-plugins/jquery.timeago.js"></script>
    <script language="javascript" type="text/javascript">
      //<![CDATA[
      $(document).ready(function() {
          $("abbr.timeago").timeago();
      });
      //]]>
    </script>
  </metal:slot>
</head>

<div metal:fill-slot="content">

<form method="GET" action=""
      tal:attributes="action request.url">
    <div class="sras-header">
        <input id="ls-current-searchterm" size="50" name="body" type="text" value=""
               tal:attributes="value request.params.get('body', '')"/>
        <input id="sras-searchbutton" type="submit"
               value="Search"/>
        <span class="sras-discreet">About 1,927 results (0.17 seconds)</span>
    </div>

    <div id="sras-content">
        <div class="sras-searchknobs">

            <!-- Left hand column of search knobs -->

            <div class="sras-searchknobgroup sras-searchcontent">
                <p><strong>All Content</strong></p>
                <ul>
                    <li><img src="${api.static_url}/images/blog.png" alt="Blog"/><a href="#">Blog Entry</a></li>
                    <li><img src="${api.static_url}/images/quill.png" alt="Blog Comment"/><a href="#">Blog Comment</a>
                    </li>
                    <li><img src="${api.static_url}/images/building.png" alt="Community"/><a href="#">Community</a></li>
                    <li><img src="${api.static_url}/images/calendar-select.png" alt="Event"/><a href="#">Event</a></li>
                    <li><img src="${api.static_url}/images/blue-document-text.png" alt="File"/><a href="#">File</a></li>
                    <li><img src="${api.static_url}/images/newspaper.png" alt="News"/><a href="#">News Item</a></li>
                    <li><img src="${api.static_url}/images/user.png" alt="Profile"/><a href="#">Profile</a></li>
                    <li><img src="${api.static_url}/images/wiki.png" alt="Wiki"/><a href="#">Wiki Page</a></li>
                </ul>
            </div>

            <div class="sras-searchknobgroup">
                <ul>
                    <li><a href="#">Any time</a></li>
                    <li><a href="#">Past hour</a></li>
                    <li><a href="#">Past day</a></li>
                    <li><strong>Past week</strong></li>
                    <li><a href="#">Past month</a></li>
                    <li><a href="#">Past year</a></li>
                </ul>
            </div>

            <div class="sras-searchknobgroup last">
                <label>Author</label>
                <input style="width: 130px" value="Paul Everitt" size="20"/>
                <input id="sras-authorknob" type="submit" value="Search" />
                <label>Tag</label>
                <input style="width: 130px" value="justonetag" size="20"/>
                <input id="sras-tagknob" type="submit" value="Search" />
            </div>

        </div>
        <script type="text/javascript">
$(document).ready(function(){
    $('#sras-searchbutton, #sras-authorknob, #sras-tagknob').button();
 });
        </script>


        <div id="sras-results">
            <div class="sras-result" tal:repeat="r results">
                <a class="sras-result-title" href="${r['url']}">${r['title']}</a>

                <p class="sras-summary">
                    ${r['description']}
                </p>

                <div class="sras-details">
                    <img src="${api.static_url}/images/${r['icon']}"
                         alt="${r['type']}" height="12" width="12"/>
                    ${r['type']} in
                    <a class="sras-searchfooterlinks"
                       href="${r['community_url']}">${r['community_title']}</a>
                    modified
                    <em><abbr class="timeago" title="${r['timeago']}">
                      ${r['timeago']}</abbr></em> by
                    <a class="sras-searchfooterlinks"
                       href="${r['author_url']}">${r['author_name']}</a>
                </div>
            </div>
        </div>

        <div id="sras-pagination">
            <metal:script metal:use-macro="api.snippets.macros['gridstyle_batching_script']" />
            <table tal:condition="batch_info['batching_required']" width="100%">
              <tr class="ui-grid-footer">
                <th class="ui-widget-header">
                  <div metal:use-macro="api.snippets.macros['gridstyle_batching']">
                  </div>
                </th>
              </tr>
            </table>
        </div>

    </div>

</form>

</div>

</html>
