<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="layout.macros['master']">

<div metal:fill-slot="content">

<style>
    .sras-discreet {
        xfont-size: 65%;
        color: #999999;
    }

    /* search results page */
    .sras-header {
        text-align: center;
        padding-bottom: 1em;
    }


    .sras-header input {
        height: 2em;
    }
    .sras-discreet {
        display: block;
    }

    #sras-content {
        font-size: 13px;
        font-family: Arial, sans-serif;
        width: 85%;
        overflow: hidden;
    }

    .sras-searchknobs {
        width: 150px;
        float: left;
        border-right: 1px solid #A3A3A3;
        padding-bottom: 9999px;
        margin-bottom: -9999px;
    }

    .sras-searchknobgroup {
        border-bottom: solid #A3A3A3 1px;
        padding: 1em 0;
    }

    .sras-searchknobs a,
    .sras-searchknobs a:visited {
        text-decoration: none;
        color: #3A74A9;
    }

    .sras-searchknobs .sras-searchcontent a {
        padding-left: 5px;
        line-height: 2em;
    }

    .sras-searchknobs p {
        margin-top: 0.1em;
        margin-bottom: 0.1em;
    }

    .sras-searchknobgroup.last {
        border-bottom: none;
    }

    .sras-searchknobgroup label {
        display: block;
        font-weight: bold;
        margin: 10px 0 3px;
    }

    .sras-searchknobgroup ul {
        margin: 0;
        padding: 0;
    }

    .sras-searchknobgroup li {
        display: block;
    }

    #sras-results {
        margin-left: 170px;
    }

    .sras-result {
        margin-bottom: 1em;
    }

    .sras-result-title,
    .sras-result-title:visited {
        font-size: 123%;
        font-weight: bold;
        color: #3A74A9;
    }

    .sras-summary {
        margin: 0.2em 0;
    }

    .sras-highlight {
        font-weight: bold;
    }

    .sras-details,
    .sras-details a {
        color: gray;
    }

    #sras-pagination {
        margin: 2em 0 0 170px;
        background-color: lightgray;
        text-align: right;
        padding: 0.4em
    }
    #sras-authorknob, #sras-tagknob {
     padding: 0.2em;
     font-size: 0.8em;
     margin-top: 0.2em;
    }
    #sras-searchbutton {
        padding: 0.2em;
    }
</style>

<form method="GET" action=""
      tal:attributes="action request.url">
    <div class="sras-header">
        <input id="ls-current-searchterm" size="50" name="body" type="text" value=""
