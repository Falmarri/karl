<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="api.community_layout.macros['master']">

    <div metal:fill-slot="content">

    <div metal:use-macro="api.snippets.macros['status_message']"/>

    <h1 metal:use-macro="api.snippets.macros['page_title']"/>

    <div class="kbody">
        <table class="content-listing">
            <tr>
                <th>Date</th>
                <th>Editor</th>
                <th>Action</th>
            </tr>
            <tr tal:condition="not history">
                <td colspan="4">
                    No versions have been saved yet for this content.
                </td>
            </tr>
            <tr tal:repeat="v history" tal:condition="history">
                <td>${v['date']}</td>
                <td>
                    <a href="${v['editor']['url']}">
                        ${v['editor']['name']}
                    </a>
                </td>
                <td tal:condition="v['is_current']">
                    Current Version
                </td>
                <td tal:condition="not v['is_current']">
                    <a href="#"
                        onClick="preview('${v['preview_url']}');">Preview</a> |
                    <a href="${v['restore_url']}">Restore</a>
                </td>
            </tr>
        </table>
    </div>

    <script language="javascript" type="text/javascript">
    //<![CDATA[
    function preview(url) {
        $.ajax({
            'url': url,
            'success': function(html, status) {
                if (status != "success") {
                    alert("Unable to retrieve preview.");
                    return;
                }
                var wtf = $('<div>' + html + '</div>')
                    .appendTo('body')
                    .hide()
                    .karldialog({
                        width: 400,
                        buttons: {
                            Close: function() {
                                $(this).karldialog('close');
                            },
                        },
                    });
            }
        });
        return false;
    }
    //]]>
    </script>

    </div>

</html>
