<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="api.generic_layout.macros['master']">

<head>
 <metal:slot metal:fill-slot="extra-headers">
  <link rel="stylesheet" type="text/css" 
	    href="${api.static_url}/jquery-ui/1.7/themes/smoothness/ui.all.css" />
  <style type="text/css">
   .ui-tabs .ui-tabs-hide {
     display: none;
   }
   .communityEntry {
        overflow-y: auto;
   }
   .community-tabs {
        float:right;
        width: 235px;
        margin-left: 0.5em;
        font-size: x-small;
   }
  </style>
  <script src="${api.static_url}/jquery-ui/1.7/ui/ui.tabs.js"></script>
 </metal:slot>
</head>

<body>
  <div metal:fill-slot="content">

    <div metal:use-macro="api.snippets.macros['status_message']"/>
    <div metal:use-macro="api.snippets.macros['actions_box']"/>

    <h1>${api.page_title}</h1>

    <div id="community_scope" style="padding-bottom: 0.5em"
         tal:condition="api.user_is_staff">
     <tal:loop tal:repeat="subview_class subview_classes">
     <a href="${subview_class['urlname']}"
        title="${subview_class['description']}"
        tal:omit-tag="subview_class['current']"
     >${subview_class['title']}</a>
        <tal:if tal:condition="not repeat.subview_class.end"
        >&nbsp;|&nbsp;</tal:if>
     </tal:loop>
    </div>

    <div metal:use-macro="api.snippets.macros['letter_box']"/>

    <metal:script
        metal:use-macro="api.snippets.macros['gridstyle_batching_script']" />
    <table tal:condition="batch_info['batching_required']" width="70%">
      <tr class="ui-grid-footer">
        <th class="ui-widget-header">
          <div metal:use-macro="api.snippets.macros['gridstyle_batching']">
          </div>
        </th>
      </tr>
    </table>

    <div class="communityEntry"
         tal:repeat="community communities">

      <div id="${community.name}-tabs" class="community-tabs">
       <ul>
        <li title="Community tools">
          <a href="#${community.name}-quicklinks">quicklinks</a>
        </li>
        <li title="Content recently updated in the community">
          <a href="${community.name}/recent_items.html">recent</a>
        </li>
        <li title="Community members">
          <a href="${community.name}/members.html">members</a>
        </li>
       </ul>
       <div id="${community.name}-quicklinks">
        <tal:loop tal:repeat="tab community.tabs[1:]">
         <a href="${tab['url']}">${tab['name'].lower()}</a>
         <tal:if tal:condition="community.member">
          <a href="${tab['url']}/add.html"
             title="Add">+</a>
         </tal:if>
         <tal:if tal:condition="not repeat.tab.end">&nbsp;|&nbsp;</tal:if>
        </tal:loop>
       </div>
      </div>
      <script type="text/javascript">
        $(function(){$("#${community.name}-tabs").tabs();});
      </script>

      <div class="klisting_header">
        <a href="${community.url}">${community.title}</a>
        <span tal:condition="not api.has_staff_acl(community.context)"
          metal:use-macro="api.snippets.macros['privacy_badge']"/>
      </div>

      <p>${community.description}</p>
      <div class="documentByLine">
        <span>${community.number_of_members} Member(s)</span>
        <span> | </span>
        <span>Last Activity: ${community.last_activity_date}</span>
      </div>
    </div>

    <table tal:condition="batch_info['batching_required']" width="70%">
      <tr class="ui-grid-footer">
        <th class="ui-widget-header">
          <div metal:use-macro="api.snippets.macros['gridstyle_batching']">
          </div>
        </th>
      </tr>
    </table>

  </div>

</body>
</html>
